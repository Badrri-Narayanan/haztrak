{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    // Allow JSX in test.js files
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          "test.js",
          "spec.jsx",
          ".jsx"
        ]
      }
    ],
    // temporary turn off until resolve
    "react/no-unescaped-entities": "off",
    "react/prop-types": "off",
    "import/no-cycle": "off",
    "react/jsx-props-no-spreading": "off",
    "jsx-a11y/label-has-associated-control": "off",
    "object-curly-spacing": "off",
    "no-console": "off",
    "no-param-reassign": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "src/"
        ]
      }
    }
  }
}
